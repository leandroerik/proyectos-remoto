<html>	
	<head>
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We" crossorigin="anonymous">
		<style>
			table, th, td {
				border: 1px solid black;
				border-collapse: collapse;
			};
			
			.pl-20 {
				padding-left: 20px
			}
			
			#table-scroll {
			 	max-height: 550px;
			 	overflow:auto;  
				margin-top:20px;
			};
		</style>
	</head>
	<body>
	<div class="mt-3">
		<div>
			<button type="button" class="close" aria-label="Close" onclick="reback()">
			  <span aria-hidden="true">&times;</span>
			</button>
			
			<p class="text-start fs-3 pl-20">
				Cuit: {{cuit}}  <br>
				Persona: {{apellido}}, {{nombre}}
			</p>
		</div>
			
		<div class="table-responsive-xxl" id="table-scroll">
		
			<table class="table table-striped table-hover" >
				<thead class="table-dark" style="position: sticky;	z-index: 10; top: 0;">
					 <tr>
						<th scope="col">Momento</th>
						<th scope="col">Endpoint</th>
						<th scope="col">Evento</th>
						<th scope="col">Datos</th>
						<th scope="col">Error</th>
						<th scope="col">Id Proceso</th>
						<th scope="col">Ip</th>
					</tr>
				</thead>
				{{#each registros}}
					{{#.}}
					
						{{#if error}}
							<tr style="background-color: #ff000040">
						{{else}}
							<tr>
						{{/if}}
						
						<td>{{momento}}</td>
						<td>{{endpoint}}</td>
						<td>{{evento}}</td>
						
						{{#if error}}
							<td colspan="2">{{datos}}</td>
						{{else}}
							<td>{{datos}}</td>
							<td>{{error}}</td>
						{{/if}}
						
						<td>{{idProceso}}</td>
						<td>{{ip}}</td>
					</tr>
					{{/.}}
				{{/each}}
			</table>
		</div>
	</div>
	
	<script>
	
		function reback() {
			window.location="/bb/api/logs";
		}
	
	</script>

	</body>
</html>